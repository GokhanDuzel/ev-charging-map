{
  "compilerOptions": {
    "target": "ES6", // Specify the ECMAScript target version (e.g., ES5, ES6)
    "module": "CommonJS", // Specify the module system (e.g., CommonJS, ES6)
    "outDir": "./dist", // Specify the output directory for transpiled code
    "rootDir": "./src", // Specify the root directory of your TypeScript source code
    "strict": true, // Enable strict type checking
    "esModuleInterop": true, // Allow interoperability between CommonJS and ES Modules
    // ...other compiler options...
  },
  "include": ["src/**/*.ts"], // Specify the files to include in the compilation process
  "exclude": ["node_modules"] // Specify files/folders to exclude from compilation
}
